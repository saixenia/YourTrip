<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Viaje">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Empezar Your Trip"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Btn_Viaje"
            android:layout_width="319dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:drawableTop="@drawable/ic_flight_black_35dp"
            android:text="VIAJE" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3">

        <Button
            android:id="@+id/Btn_escapada"
            android:layout_width="166dp"
            android:layout_height="85sp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:drawableTop="@drawable/ic_directions_run_black_35dp"
            android:text="ESCAPADA" />

        <Button
            android:id="@+id/Btn_Vcotidiana"
            android:layout_width="193dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:drawableTop="@drawable/ic_camera_black_35dp"
            android:text="VIDA COTIDIANA" />

        <Button
            android:id="@+id/Btn_Familia"
            android:layout_width="166dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#d20a00"
            android:drawableTop="@drawable/ic_group_black_35dp"
            android:text="FAMILIA" />

        <Button
            android:id="@+id/Btn_Bebe"
            android:layout_width="193dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:drawableTop="@drawable/ic_child_friendly_black_35dp"
            android:text="BEBÃ‰" />

        <Button
            android:id="@+id/Btn_Mascota"
            android:layout_width="167dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:drawableTop="@drawable/ic_android_black_35dp"
            android:text="MASCOTAS" />

        <Button
            android:id="@+id/Btn_OViaje"
            android:layout_width="193dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:drawableTop="@drawable/ic_near_me_black_35dp"
            android:text="OTRO" />

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Importar un viaje pasado"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>